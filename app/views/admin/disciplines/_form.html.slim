= simple_form_for [:admin, @discipline], wrapper: :horizontal_form, html: { class: 'form-horizontal' } do |f|
	= f.input :name

	.row
		.col-md-11.col-md-offset-3.button_box
			= f.button :submit, 'Сохранить', class: 'btn btn-primary'
			= link_to 'Назад', admin_disciplines_path, class: 'btn btn-default'
			= link_to 'Удалить', [:admin, @discipline], class: 'btn btn-danger', method: :delete, data: { confirm: 'Действительно хотите далить?' } if @discipline.persisted?